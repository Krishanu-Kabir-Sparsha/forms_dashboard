<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Security Category -->
        <record id="module_forms_dashboard_category" model="ir.module.category">
            <field name="name">Forms Dashboard</field>
            <field name="description">User access level for Forms Dashboard</field>
            <field name="sequence">20</field>
        </record>

        <!-- User Group -->
        <record id="group_forms_dashboard_user" model="res.groups">
            <field name="name">Forms Dashboard User</field>
            <field name="category_id" ref="module_forms_dashboard_category"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Manager Group -->
        <record id="group_forms_dashboard_manager" model="res.groups">
            <field name="name">Forms Dashboard Manager</field>
            <field name="category_id" ref="module_forms_dashboard_category"/>
            <field name="implied_ids" eval="[(4, ref('group_forms_dashboard_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>

        <!-- Record Rules -->
        <record id="rule_partnership_inquiry_public" model="ir.rule">
            <field name="name">Public Access to Partnership Inquiries</field>
            <field name="model_id" ref="model_partnership_inquiry"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_public'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    </data>
</odoo>