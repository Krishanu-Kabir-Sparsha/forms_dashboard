<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    
        <!-- Partnership Tags -->
    <record id="view_partnership_tag_list" model="ir.ui.view">
        <field name="name">partnership.tag.list</field>
        <field name="model">partnership.tag</field>
        <field name="arch" type="xml">
            <list string="Partnership Tags">
                <field name="name"/>
                <field name="color" widget="color_picker"/>
                <field name="description"/>
            </list>
        </field>
    </record>

