<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Common CSS Styles -->
    <template id="den_common_assets" name="DEN Common Assets">
        <style>
            /* Modern Color Scheme */
            :root {
                --den-primary: #714B67;
                --den-secondary: #00A09D;
                --den-success: #28a745;
                --den-info: #17a2b8;
                --den-warning: #ffc107;
                --den-danger: #dc3545;
                --den-light: #f8f9fa;
                --den-dark: #343a40;
            }

            /* Form Styling */
            .den-form-container {
                max-width: 800px;
                margin: 2rem auto;
                padding: 2.5rem;
                background: white;
                border-radius: 12px;
                box-shadow: 0 4px 20px rgba(0,0,0,0.08);
            }

            .den-form-header {
                text-align: center;
                margin-bottom: 2.5rem;
                padding-bottom: 1.5rem;
                border-bottom: 2px solid var(--den-light);
            }

            .den-form-header h2 {
                color: var(--den-primary);
                font-size: 2rem;
                font-weight: 600;
                margin-bottom: 0.5rem;
            }

            .den-form-header p {
                color: var(--den-dark);
                font-size: 1.1rem;
                opacity: 0.8;
            }

            .den-form-group {
                margin-bottom: 1.8rem;
            }

            .den-form-group label {
                display: block;
                margin-bottom: 0.7rem;
                color: var(--den-dark);
                font-weight: 500;
                font-size: 0.95rem;
            }

            .den-form-group input,
            .den-form-group select,
            .den-form-group textarea {
                width: 100%;
                padding: 0.8rem 1rem;
                border: 1.5px solid #e2e8f0;
                border-radius: 8px;
                font-size: 1rem;
                transition: all 0.3s ease;
            }

            .den-form-group input:focus,
            .den-form-group select:focus,
            .den-form-group textarea:focus {
                outline: none;
                border-color: var(--den-primary);
                box-shadow: 0 0 0 3px rgba(113, 75, 103, 0.1);
            }

            .den-form-row {
                display: grid;
                grid-template-columns: 1fr 1fr;
                gap: 1.5rem;
            }

            .den-submit-btn {
                background: var(--den-primary);
                color: white;
                padding: 1rem 2rem;
                border: none;
                border-radius: 8px;
                font-size: 1.1rem;
                font-weight: 500;
                cursor: pointer;
                width: 100%;
                margin-top: 1.5rem;
                transition: all 0.3s ease;
            }

            .den-submit-btn:hover {
                background: #5a3c52;
                transform: translateY(-1px);
                box-shadow: 0 4px 12px rgba(113, 75, 103, 0.2);
            }

            .required-field::after {
                content: " *";
                color: var(--den-danger);
                font-weight: bold;
            }

            /* Success Message Styling */
            .den-success-message {
                background: var(--den-success);
                color: white;
                padding: 1.5rem;
                border-radius: 8px;
                text-align: center;
                margin-bottom: 2rem;
                animation: slideDown 0.5s ease-out;
            }

            /* Error Message Styling */
            .den-error-message {
                background: var(--den-danger);
                color: white;
                padding: 1.5rem;
                border-radius: 8px;
                text-align: center;
                margin-bottom: 2rem;
                animation: slideDown 0.5s ease-out;
            }

            @keyframes slideDown {
                from {
                    transform: translateY(-20px);
                    opacity: 0;
                }
                to {
                    transform: translateY(0);
                    opacity: 1;
                }
            }

            /* Responsive Design */
            @media (max-width: 768px) {
                .den-form-row {
                    grid-template-columns: 1fr;
                }

                .den-form-container {
                    margin: 1rem;
                    padding: 1.5rem;
                }
            }
        </style>
    </template>

    <!-- Main Landing Page -->
    <template id="den_landing_page" name="DEN Landing Page" inherit_id="website.layout">
        <xpath expr="//main" position="inside">
            <div class="den-page-wrapper">
                <!-- Header Section -->
                <section class="den-hero-section">
                    <div class="container">
                        <div class="row align-items-center py-5">
                            <div class="col-lg-6">
                                <h1 class="display-4 text-primary mb-4">Welcome to Forms Dashboard</h1>
                                <p class="lead mb-4">Streamline your partnerships, donations, and collaborations with our integrated forms solution.</p>
                            </div>
                            <div class="col-lg-6">
                                <img src="/forms_dashboard/static/src/img/hero-image.svg" alt="Forms Dashboard" class="img-fluid"/>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Forms Section -->
                <section class="den-forms-section py-5">
                    <div class="container">
                        <div class="row">
                            <!-- Partnership Form -->
                            <div class="col-lg-4 mb-4">
                                <div class="card h-100 shadow-sm">
                                    <div class="card-body">
                                        <h3 class="card-title text-primary">Corporate Partnership</h3>
                                        <p class="card-text">Join our network of educational excellence and create meaningful partnerships.</p>
                                        <button class="btn btn-primary" onclick="showForm('partnership')">Start Partnership</button>
                                    </div>
                                </div>
                            </div>

                            <!-- Donation Form -->
                            <div class="col-lg-4 mb-4">
                                <div class="card h-100 shadow-sm">
                                    <div class="card-body">
                                        <h3 class="card-title text-success">Make a Donation</h3>
                                        <p class="card-text">Support our mission and contribute to educational advancement.</p>
                                        <button class="btn btn-success" onclick="showForm('donation')">Donate Now</button>
                                    </div>
                                </div>
                            </div>

                            <!-- Collaboration Form -->
                            <div class="col-lg-4 mb-4">
                                <div class="card h-100 shadow-sm">
                                    <div class="card-body">
                                        <h3 class="card-title text-info">Institutional Collaboration</h3>
                                        <p class="card-text">Partner with us for academic excellence and research initiatives.</p>
                                        <button class="btn btn-info" onclick="showForm('collaboration')">Collaborate</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Form Modal -->
                <div class="modal fade" id="formModal" tabindex="-1">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header border-0">
                                <button type="button" class="close" data-dismiss="modal">Ã—</button>
                            </div>
                            <div class="modal-body p-0">
                                <!-- Forms will be loaded here dynamically -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>

    <!-- Form Success Template -->
    <template id="form_success" name="Form Success">
        <div class="den-success-message">
            <i class="fa fa-check-circle fa-3x mb-3"></i>
            <h3>Thank you for your submission!</h3>
            <p class="mb-0">Your reference number is: <strong t-esc="inquiry_id"/></p>
            <p class="mt-3">We will review your information and get back to you soon.</p>
            <a href="/" class="btn btn-outline-light mt-3">Return to Homepage</a>
        </div>
    </template>

    <!-- Form Error Template -->
    <template id="form_error" name="Form Error">
        <div class="den-error-message">
            <i class="fa fa-exclamation-circle fa-3x mb-3"></i>
            <h3>Oops! Something went wrong.</h3>
            <p t-if="error" class="mb-0" t-esc="error"/>
            <p t-else="" class="mb-0">Please try again later or contact us directly.</p>
            <a href="/" class="btn btn-outline-light mt-3">Return to Homepage</a>
        </div>
    </template>
</odoo>