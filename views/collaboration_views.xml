<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_collaboration_inquiry_list" model="ir.ui.view">
        <field name="name">collaboration.inquiry.list</field>
        <field name="model">collaboration.inquiry</field>
        <field name="arch" type="xml">
            <list string="Collaboration Inquiries" decoration-info="state=='new'" decoration-success="state=='active'">
                <field name="name"/>
                <field name="institution_name"/>
                <field name="contact_name"/>
                <field name="email"/>
                <field name="collaboration_type"/>
                <field name="institution_type"/>
                <field name="country"/>
                <field name="state"/>
                <field name="date_submitted"/>
            </list>
        </field>
    </record>

    <record id="view_collaboration_inquiry_form" model="ir.ui.view">
        <field name="name">collaboration.inquiry.form</field>
        <field name="model">collaboration.inquiry</field>
        <field name="arch" type="xml">
            <form string="Collaboration Inquiry">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="new,in_progress,approved,active"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="institution_name"/>
                            <field name="contact_name"/>
                            <field name="email"/>
                            <field name="phone"/>
                        </group>
                        <group>
                            <field name="collaboration_type"/>
                            <field name="institution_type"/>
                            <field name="country"/>
                            <field name="source"/>
                            <field name="date_submitted"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Collaboration Scope">
                            <field name="scope"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_collaboration_inquiry_search" model="ir.ui.view">
        <field name="name">collaboration.inquiry.search</field>
        <field name="model">collaboration.inquiry</field>
        <field name="arch" type="xml">
            <search string="Collaboration Inquiries">
                <field name="name"/>
                <field name="institution_name"/>
                <field name="contact_name"/>
                <field name="email"/>
                <field name="country"/>
                <filter string="New" name="new" domain="[('state', '=', 'new')]"/>
                <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Approved" name="approved" domain="[('state', '=', 'approved')]"/>
                <filter string="Active" name="active" domain="[('state', '=', 'active')]"/>
                <separator/>
                <filter string="This Week" name="this_week" 
                        domain="[('date_submitted', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <filter string="This Month" name="this_month" 
                        domain="[('date_submitted', '&gt;=', (context_today().replace(day=1)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Collaboration Type" name="group_collaboration_type" context="{'group_by': 'collaboration_type'}"/>
                    <filter string="Institution Type" name="group_institution_type" context="{'group_by': 'institution_type'}"/>
                    <filter string="Country" name="group_country" context="{'group_by': 'country'}"/>
                    <filter string="Submission Date" name="group_date_submitted" context="{'group_by': 'date_submitted'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_collaboration_inquiry" model="ir.actions.act_window">
        <field name="name">Collaboration Inquiries</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">collaboration.inquiry</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_collaboration_inquiry_search"/>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first collaboration inquiry!
            </p>
            <p>
                Collaboration inquiries from your website will automatically appear here.
            </p>
        </field>
    </record>
</odoo>