<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partnership_inquiry_list" model="ir.ui.view">
        <field name="name">partnership.inquiry.list</field>
        <field name="model">partnership.inquiry</field>
        <field name="arch" type="xml">
            <list string="Partnership Inquiries" decoration-info="state=='new'" decoration-success="state=='converted'">
                <field name="name"/>
                <field name="company_name"/>
                <field name="contact_person"/>
                <field name="email"/>
                <field name="partnership_type"/>
                <field name="company_size"/>
                <field name="state"/>
                <field name="date_submitted"/>
            </list>
        </field>
    </record>

    <record id="view_partnership_inquiry_form" model="ir.ui.view">
        <field name="name">partnership.inquiry.form</field>
        <field name="model">partnership.inquiry</field>
        <field name="arch" type="xml">
            <form string="Partnership Inquiry">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="new,in_progress,qualified,converted"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="company_name"/>
                            <field name="contact_person"/>
                            <field name="email"/>
                            <field name="phone"/>
                        </group>
                        <group>
                            <field name="partnership_type"/>
                            <field name="company_size"/>
                            <field name="industry"/>
                            <field name="source"/>
                            <field name="date_submitted"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Partnership Details">
                            <field name="goals"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_partnership_inquiry_search" model="ir.ui.view">
        <field name="name">partnership.inquiry.search</field>
        <field name="model">partnership.inquiry</field>
        <field name="arch" type="xml">
            <search string="Partnership Inquiries">
                <field name="name"/>
                <field name="company_name"/>
                <field name="contact_person"/>
                <field name="email"/>
                <field name="industry"/>
                <filter string="New" name="new" domain="[('state', '=', 'new')]"/>
                <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Qualified" name="qualified" domain="[('state', '=', 'qualified')]"/>
                <filter string="Converted" name="converted" domain="[('state', '=', 'converted')]"/>
                <separator/>
                <filter string="This Week" name="this_week" 
                        domain="[('date_submitted', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <filter string="This Month" name="this_month" 
                        domain="[('date_submitted', '&gt;=', (context_today().replace(day=1)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Partnership Type" name="group_partnership_type" context="{'group_by': 'partnership_type'}"/>
                    <filter string="Company Size" name="group_company_size" context="{'group_by': 'company_size'}"/>
                    <filter string="Submission Date" name="group_date_submitted" context="{'group_by': 'date_submitted'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_partnership_inquiry" model="ir.actions.act_window">
        <field name="name">Partnership Inquiries</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">partnership.inquiry</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_partnership_inquiry_search"/>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first partnership inquiry!
            </p>
            <p>
                Partnership inquiries from your website will automatically appear here.
            </p>
        </field>
    </record>
</odoo>