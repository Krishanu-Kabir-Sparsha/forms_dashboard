                    </notebook>
                </sheet>
                <!-- Chatter removed to avoid duplicates -->
            </form>
        </field>
    </record>

    <!-- Dashboard Actions for each inquiry type, using the dashboard-specific views -->
    <record id="action_dashboard_partnership_inquiry" model="ir.actions.act_window">
        <field name="name">Partnership Inquiries</field>
        <field name="res_model">partnership.inquiry</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'create': False}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No partnership inquiries yet!
            </p>
            <p>
                Partnership inquiries from your website will appear here.
            </p>
        </field>
    </record>

    <!-- Specific view references for dashboard actions -->
    <record id="action_dashboard_partnership_inquiry_list" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">list</field>
        <field name="view_id" ref="view_partnership_inquiry_dashboard_list"/>
        <field name="act_window_id" ref="action_dashboard_partnership_inquiry"/>
    </record>

    <record id="action_dashboard_partnership_inquiry_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_partnership_inquiry_dashboard_form"/>
