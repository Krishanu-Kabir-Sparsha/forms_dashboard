<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Main Dashboard Action -->
    <record id="action_forms_dashboard_main" model="ir.actions.client">
        <field name="name">Forms Dashboard</field>
        <field name="tag">forms_dashboard_main</field>
    </record>

    <!-- Dashboard List Views - Using different IDs to avoid conflicts -->
    <record id="view_partnership_inquiry_dashboard_list" model="ir.ui.view">
        <field name="name">partnership.inquiry.dashboard.list</field>
        <field name="model">partnership.inquiry</field>
        <field name="mode">primary</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <list string="Partnership Inquiries" create="false" edit="false" delete="false">
                <field name="name"/>
                <field name="company_name"/>
                <field name="contact_person"/>
                <field name="email"/>
                <field name="partnership_type"/>
                <field name="company_size"/>
                <field name="state"/>
                <field name="date_submitted"/>
            </list>
        </field>
    </record>

    <!-- Dashboard Form View for Partnership - Using different ID -->
    <record id="view_partnership_inquiry_dashboard_form" model="ir.ui.view">
        <field name="name">partnership.inquiry.dashboard.form</field>
        <field name="model">partnership.inquiry</field>
        <field name="mode">primary</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <form string="Partnership Inquiry" create="false" edit="true" delete="false">
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="company_name"/>
                            <field name="contact_person"/>
                            <field name="email"/>
                            <field name="phone"/>
                        </group>
                        <group>
                            <field name="partnership_type"/>
                            <field name="company_size"/>
                            <field name="industry"/>
                            <field name="date_submitted" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Goals">
                            <field name="goals"/>
                        </page>
                    </notebook>
                </sheet>
                <!-- Chatter removed to avoid duplicates -->
            </form>
        </field>
    </record>

    <!-- Dashboard List View for Donation - Using different ID -->
    <record id="view_donation_inquiry_dashboard_list" model="ir.ui.view">
        <field name="name">donation.inquiry.dashboard.list</field>
        <field name="model">donation.inquiry</field>
        <field name="mode">primary</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <list string="Donation Inquiries" create="false" edit="false" delete="false">
                <field name="name"/>
                <field name="donor_name"/>
                <field name="email"/>
                <field name="donation_type"/>
                <field name="amount_range"/>
                <field name="state"/>
                <field name="date_submitted"/>
            </list>
        </field>
    </record>

    <!-- Dashboard Form View for Donation - Using different ID -->
    <record id="view_donation_inquiry_dashboard_form" model="ir.ui.view">
        <field name="name">donation.inquiry.dashboard.form</field>
        <field name="model">donation.inquiry</field>
        <field name="mode">primary</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <form string="Donation Inquiry" create="false" edit="true" delete="false">
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="donor_name"/>
                            <field name="email"/>
                            <field name="phone"/>
                        </group>
                        <group>
                            <field name="donation_type"/>
                            <field name="amount_range"/>
                            <field name="recognition"/>
                            <field name="date_submitted" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Areas of Interest">
                            <field name="interest_areas"/>
                        </page>
                    </notebook>
                </sheet>
                <!-- Chatter removed to avoid duplicates -->
            </form>
        </field>
    </record>

    <!-- Dashboard List View for Collaboration - Using different ID -->
    <record id="view_collaboration_inquiry_dashboard_list" model="ir.ui.view">
        <field name="name">collaboration.inquiry.dashboard.list</field>
        <field name="model">collaboration.inquiry</field>
