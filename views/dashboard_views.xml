<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Main Dashboard Action -->
    <record id="action_forms_dashboard_main" model="ir.actions.client">
        <field name="name">Forms Dashboard</field>
        <field name="tag">forms_dashboard_main</field>
    </record>

    <!-- Partnership Inquiry Views -->
    <record id="view_partnership_inquiry_list" model="ir.ui.view">
        <field name="name">partnership.inquiry.list</field>
        <field name="model">partnership.inquiry</field>
        <field name="arch" type="xml">
            <list string="Partnership Inquiries" create="false" edit="false" delete="false">
                <field name="name"/>
                <field name="company_name"/>
                <field name="contact_person"/>
                <field name="email"/>
                <field name="partnership_type"/>
                <field name="company_size"/>
                <field name="state"/>
                <field name="date_submitted"/>
            </list>
        </field>
    </record>

    <!-- Donation Inquiry Views -->
    <record id="view_donation_inquiry_list" model="ir.ui.view">
        <field name="name">donation.inquiry.list</field>
        <field name="model">donation.inquiry</field>
        <field name="arch" type="xml">
            <list string="Donation Inquiries" create="false" edit="false" delete="false">
                <field name="name"/>
                <field name="donor_name"/>
                <field name="email"/>
                <field name="donation_type"/>
                <field name="amount_range"/>
                <field name="state"/>
                <field name="date_submitted"/>
            </list>
        </field>
    </record>

    <!-- Collaboration Inquiry Views -->
    <record id="view_collaboration_inquiry_list" model="ir.ui.view">
        <field name="name">collaboration.inquiry.list</field>
        <field name="model">collaboration.inquiry</field>
        <field name="arch" type="xml">
            <list string="Collaboration Inquiries" create="false" edit="false" delete="false">
                <field name="name"/>
                <field name="institution_name"/>
                <field name="contact_name"/>
                <field name="email"/>
                <field name="collaboration_type"/>
                <field name="institution_type"/>
                <field name="state"/>
                <field name="date_submitted"/>
            </list>
        </field>
    </record>

    <!-- Actions for each inquiry type -->
    <record id="action_partnership_inquiry" model="ir.actions.act_window">
        <field name="name">Partnership Inquiries</field>
        <field name="res_model">partnership.inquiry</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_partnership_inquiry_list"/>
        <field name="context">{'create': False}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No partnership inquiries yet!
            </p>
            <p>
                Partnership inquiries from your website will appear here.
            </p>
        </field>
    </record>

    <record id="action_donation_inquiry" model="ir.actions.act_window">
        <field name="name">Donation Inquiries</field>
        <field name="res_model">donation.inquiry</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_donation_inquiry_list"/>
        <field name="context">{'create': False}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No donation inquiries yet!
            </p>
            <p>
                Donation inquiries from your website will appear here.
            </p>
        </field>
    </record>

    <record id="action_collaboration_inquiry" model="ir.actions.act_window">
        <field name="name">Collaboration Inquiries</field>
        <field name="res_model">collaboration.inquiry</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_collaboration_inquiry_list"/>
        <field name="context">{'create': False}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No collaboration inquiries yet!
            </p>
            <p>
                Collaboration inquiries from your website will appear here.
            </p>
        </field>
    </record>
</odoo>