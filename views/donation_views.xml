<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_donation_inquiry_list" model="ir.ui.view">
        <field name="name">donation.inquiry.list</field>
        <field name="model">donation.inquiry</field>
        <field name="arch" type="xml">
            <list string="Donation Inquiries" decoration-info="state=='new'" decoration-success="state=='received'">
                <field name="name"/>
                <field name="donor_name"/>
                <field name="email"/>
                <field name="donation_type"/>
                <field name="amount_range"/>
                <field name="recognition"/>
                <field name="state"/>
                <field name="date_submitted"/>
            </list>
        </field>
    </record>

    <record id="view_donation_inquiry_form" model="ir.ui.view">
        <field name="name">donation.inquiry.form</field>
        <field name="model">donation.inquiry</field>
        <field name="arch" type="xml">
            <form string="Donation Inquiry">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="new,in_progress,committed,received"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="donor_name"/>
                            <field name="email"/>
                            <field name="phone"/>
                        </group>
                        <group>
                            <field name="donation_type"/>
                            <field name="amount_range"/>
                            <field name="recognition"/>
                            <field name="source"/>
                            <field name="date_submitted"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Interest Areas">
                            <field name="interest_areas"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_donation_inquiry_search" model="ir.ui.view">
        <field name="name">donation.inquiry.search</field>
        <field name="model">donation.inquiry</field>
        <field name="arch" type="xml">
            <search string="Donation Inquiries">
                <field name="name"/>
                <field name="donor_name"/>
                <field name="email"/>
                <field name="donation_type"/>
                <filter string="New" name="new" domain="[('state', '=', 'new')]"/>
                <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Committed" name="committed" domain="[('state', '=', 'committed')]"/>
                <filter string="Received" name="received" domain="[('state', '=', 'received')]"/>
                <separator/>
                <filter string="This Week" name="this_week" 
                        domain="[('date_submitted', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <filter string="This Month" name="this_month" 
                        domain="[('date_submitted', '&gt;=', (context_today().replace(day=1)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Donation Type" name="group_donation_type" context="{'group_by': 'donation_type'}"/>
                    <filter string="Amount Range" name="group_amount_range" context="{'group_by': 'amount_range'}"/>
                    <filter string="Submission Date" name="group_date_submitted" context="{'group_by': 'date_submitted'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_donation_inquiry" model="ir.actions.act_window">
        <field name="name">Donation Inquiries</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">donation.inquiry</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_donation_inquiry_search"/>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first donation inquiry!
            </p>
            <p>
                Donation inquiries from your website will automatically appear here.
            </p>
        </field>
    </record>
</odoo>